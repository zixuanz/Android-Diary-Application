<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_writing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:divider="@color/cardview_shadow_end_color"
    tools:context="com.zixuanz.mysecretdiary.WritingActivity">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <EditText
            android:id="@+id/et_wrt_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/et_wrt_emot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|right"
            android:layout_toRightOf="@id/et_wrt_weather"
            android:layout_margin="4dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_wrt_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
